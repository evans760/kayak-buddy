<!-- <div class="container"> -->

<div class="signup">
<h3 class="center-align">Find your next kayak buddy</h3>
<!-- <p>Contact other kayakers join groups.</p> -->
<div class="fbdiv">
<a href="/auth/facebook"><%= image_tag "facebook-btn.png", class: "facebook-btn" %></a>
</div>

	<h5 class="center-align">Or create an account:</h5>
	

	<%= form_for(@user) do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :email %>
	<%= f.text_field :email %>

	<%= f.label :password %>
	<%= f.password_field :password %>

	<%= f.label :password_confirmation %>
	<%= f.password_field :password_confirmation %>

	<div class="input-field">
		<%= f.radio_button(:gender, 'female') %>
		<%= f.label(:gender, 'Female', value: 'female') %>

		<%= f.radio_button(:gender, 'male') %>
		<%= f.label(:gender, 'Male', value: 'male') %><br/><br/>
	</div>

	<%= f.label :skill_level %>
	<%= f.select :skill_level, [['Beginner', 'beginner'], ['Intermediate', 'intermediate'], ['Advanced', 'advanced']] %><br/>

	<%= f.label :city %>
	<%= f.text_field :city %>

	<%= f.label :more_info %>
	<%= f.text_area :more_info %>

	<%= f.submit 'Sign up', class: 'signupbtn waves-effect waves-light btn' %>

	<% end %>
</div>